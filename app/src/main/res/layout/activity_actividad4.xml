<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".actividad4"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:layout_centerHorizontal="true">
       <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="3">
           <ImageView
               android:id="@+id/imbombilla"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_bombilla"
               android:layout_marginLeft="45px" />
           <Button
               android:id="@+id/bluz"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Luz"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linear1"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/imtemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_temp"/>
            <Button
                android:id="@+id/btemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clima"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linear2"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/impersianas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_persianas"
                android:layout_marginLeft="55px"/>
            <Button
                android:id="@+id/bpersianas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persianas"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:orientation="vertical"
            <ImageView
                android:id="@+id/imcamaras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_camara"
                android:layout_marginLeft="45px"/>
            <Button
                android:id="@+id/bcamaras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camaras"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>